{
  "compilerOptions": {
    "target": "es6", 
    "module": "commonjs", 
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"], 
  "exclude": ["node_modules"]
}